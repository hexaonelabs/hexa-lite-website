---
import { Icon } from 'astro-icon/components';
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';
import Headline from '~/components/ui/Headline.astro';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Layout from '~/layouts/PageLayout.astro';
import { getPermalink } from '~/utils/permalinks';
import Features3 from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';



// created_at
const metadata = {
  title: 'About the Team - Build by HexaOne Labs, with the community',
  description: 'Hexa Lite software is starting by the main team of HexaOne Labs, a Swiss based organization focused on innovation in the decentralized finance sector.',
};
const appDownloadLink = getPermalink('/download');
const swapAnyTokensImg = '~/assets/images/swap-any-tokens.png';
const swapCrossPlatformImg = '~/assets/images/swap-cross-platform.png';
const swapExoticTokensImg = '~/assets/images/swap-exotic-tokens.png';
const swapBestFeesImg = '~/assets/images/swap-best-fees.png';
---
<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero>
    <Fragment slot="title">
      Swap any Tokens<br /> 
      <span class="text-accent text-5xl dark:text-white highlight">at best rate & lowest fees</span>
    </Fragment>

    <Fragment slot="subtitle">
      Use decentralized exchange aggregator that sources liquidity from various DEXs & liquidity pools around DeFi protocols to provide transaction with the best rates. 
    </Fragment>
  </Hero>

  <Content
    items={[
      {
        icon: null,
        description: `With our solution you can choose from multiple On-Chain providers to get the best rate & lowest fees for your transactions 
        without the need to provide your personal information or create an account on any centralized exchange.`,
      },
    ]}
    image={{
      src: swapBestFeesImg,
      alt: 'Swap best fees',
      class: 'swap_best_fees__image',
    }}
    classes={{
      wrapperClass: 'shader__section',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Tired of paying excessive transaction fees?
      </h3>
    </Fragment>
  </Content>

  <Content
    items={[
      {
        icon: null,
        description: `We have a wide range of tokens available for you to swap. 
          You can swap any token you want, including the most exotic ones
          that are not available on centralized exchanges because we source liquidity directly from the DeFi protocols providers
          like Uniswap, Sushiswap, Balancer, Bancor, and many more to give you the best rates and lowest fees.`,
      },
    ]}
    isReversed
    image={{
      src: swapExoticTokensImg,
      alt: 'swap exotic tokens',
      class: 'swap_exotic_token__image',
    }}
    classes={{
      wrapperClass: '',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Looking for Exotic Tokens?
      </h3>
    </Fragment>
  </Content>

  <Content
    items={[
      {
        icon: null,
        description: `We integrating cross-chain swaps solution to allow you to swap tokens between different blockchains 
          without the need to manage multiple wallets or create accounts on multiple exchanges. 
          All is done in one place, with the best rates and lowest fees.`,
      },
    ]}
    image={{
      src: swapCrossPlatformImg,
      alt: 'Swap Cross Chain Tokens',
      class: 'swap_cross_platform__image',
    }}
    classes={{
      wrapperClass: 'shader__section',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Want swap Cross-Chain?
      </h3>
    </Fragment>
  </Content>

  <!-- CallToAction Widget *********** -->

  <CallToAction id="download" title="Install Hexa Lite now!" subtitle="Start your journey to financial freedom today.">
    <div slot="actions" class="flex max-w-sm gap-4">
      <Button variant="primary" href={appDownloadLink}> Download App </Button>
    </div>
  </CallToAction>

</Layout>
